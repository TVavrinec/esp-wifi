 * general action
 * get device info
*/
{
    "type": "general",
    "get": "device_info"
}
// Server Response
{
    "type": "general",
    "deviceInfo": {
        "deviceName": "ESP32",
        "deviceType": "ESP32",
        "deviceVersion": "1.0.0",
        "deviceID": "1234567890",
        "deviceIP": IP,
    }
}

